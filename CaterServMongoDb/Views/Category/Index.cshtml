@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Kategoriler</h3>

<table class="table table-boardered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>
                <a class="btn btn-outline-danger" href="/Category/DeleteCategory/@item.CategoryID">Sil</a>
                <a class="btn btn-outline-info" href="/Category/UpdateCategory/@item.CategoryID">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-outline-primary" href="/Category/CreateCategory/">Yeni Kategori Ekle</a>  