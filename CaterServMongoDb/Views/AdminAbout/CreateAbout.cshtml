@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Yeni Hakkımızda Oluşturma Alanı</h4>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post" enctype="multipart/form-data">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Özellik </label>
                        <input type="text" class="form-control" asp-for="Property1" />
                        <br />
                        <label>Özellik 2</label>
                        <input type="text" class="form-control" asp-for="Property2" />
                        <br />
                        <label>Görsel Seçiniz</label>
                        <input type="file" class="form-control" asp-for="File" />
                        <br />
                        <label>Açıklama</label>
                        <textarea type="text" rows="5" class="form-control" asp-for="Description"></textarea>
                        <br />


                        <button class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>