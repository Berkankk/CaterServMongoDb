@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Ürün Güncelleme Sayfası</h1>


<form method="post">
    <input type="hidden" asp-for="ProductID" />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Ürün Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <lable>Ürün Kategori</lable>
    <select asp-items="@ViewBag.category" asp-for="CategoryName" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <br />
    <button class="btn btn-primary">Ürünü Güncelle</button>

</form>