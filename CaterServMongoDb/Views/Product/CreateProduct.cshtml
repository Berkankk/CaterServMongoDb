@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<<h3>Yeni ürün Oluşturma Sayfası</h3>

<form method="post" enctype="multipart/form-data" > 
    <label>Resim Url</label>
    <input type="file" asp-for="File" class="form-control" />
    <br />
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Ürün Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <lable>Ürün Kategori</lable>
    <select asp-items="@ViewBag.category" asp-for="CategoryName" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <br />
    <button class="btn btn-primary">Ürünü Kaydet</button>

</form>

